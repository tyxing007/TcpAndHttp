<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.excel.dao.ConfigDao" >

	<select id="getIndustry" resultType="com.excel.vo.SysDicVO">
		SELECT id,`value`,screen_name FROM `sys_dict` WHERE id = 'industry'
	</select>
	
	<select id="getCity" resultType="com.excel.vo.CityVO">
		SELECT  `id`,  `name` FROM `city`
	</select>
	
	<select id="getIndustry2" resultType="java.lang.Integer">
		SELECT DISTINCT industry_id FROM `industry_to_tag` 
	</select>
	
	<select id="getCategory2" parameterType="java.lang.Integer" resultType="java.lang.Integer">
		SELECT DISTINCT category_id FROM `industry_to_tag` WHERE industry_id = #{industry_id}
	</select>


</mapper>